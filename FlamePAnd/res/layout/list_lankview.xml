<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/orenge_color"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="66px"
            android:text="World Ranking"
            android:textColor="@color/red_color"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/orenge_color"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rank        Name                    Score"
            android:textColor="@color/character_color"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listviewLank"
        android:layout_width="fill_parent"
        android:layout_height="294dp"
        android:background="@drawable/haikei"
        android:textColor="@color/character_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="0.73"
        android:background="@color/orenge_color"
        android:orientation="vertical"
        android:weightSum="1" >

        <TextView
            android:id="@+id/LankName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="0.06"
            android:text="LankName"
            android:textColor="@color/character_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TextMyManey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="TextView"
            android:textColor="@color/character_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orenge_color"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:onClick="LankUpdate"
            android:overScrollMode="ifContentScrolls"
            android:text="更新" />

        <Button
            android:id="@+id/button_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="LankUpLoad"
            android:overScrollMode="ifContentScrolls"
            android:text="ランキング登録" />

        <Button
            android:id="@+id/button_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.70"
            android:onClick="back"
            android:overScrollMode="ifContentScrolls"
            android:text="戻る" />

    </LinearLayout>

</LinearLayout>
