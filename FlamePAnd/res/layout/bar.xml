<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@color/background_menu">

	<LinearLayout android:weightSum="1"
		android:id = "@+id/img1"		
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent" 
		android:orientation="vertical" 
		xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbars="vertical" android:scrollbarAlwaysDrawHorizontalTrack="true" android:scrollbarAlwaysDrawVerticalTrack="true">
	
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:weightSum="1" >

				<TextView
				    android:id="@+id/TextView01"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.16"
				    android:text="BGM"
				    android:textColor="@color/background_white"
				    android:layout_marginLeft="40px"
				    android:textSize="20sp" />

				<SeekBar
				    android:id="@+id/seekbar"
				    android:layout_width="140dp"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="44px"
				    android:progressDrawable="@drawable/bar_color" />

		    </LinearLayout>
		      
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:weightSum="1" >

				<TextView
				    android:id="@+id/TextView01"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.16"
				    android:text="効果音"
				    android:textColor="@color/background_white"
				    android:layout_marginLeft="41px"
				    android:textSize="20sp" />

				<SeekBar
				    android:id="@+id/seekbar2"
				    android:layout_width="140dp"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="20px"
				    android:progressDrawable="@drawable/bar_color2" />

		    </LinearLayout>
			
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="63dp"
			    android:orientation="horizontal"
			    android:weightSum="1" >

				<Button
				    android:id="@+id/Button01"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.35"
				    android:onClick="SoundChange"
				    android:text="音楽変更" 
				    android:textSize="20sp" />

				<TextView
				    android:id="@+id/TextSoundName"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_weight="0.16"
				    android:text="0"
				    android:textColor="@color/background_white"
				    android:layout_marginLeft="40px"
				    android:textSize="20sp" />

		    </LinearLayout>
			    
			<LinearLayout
			    android:layout_width="288dp"
			    android:layout_height="68dp"
			    android:layout_gravity="center"
			    android:orientation="vertical"
			    android:weightSum="1" >

				<Button
				    android:id="@+id/Button03"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:overScrollMode="ifContentScrolls"
				    android:text="データ初期化"
				    android:onClick="InitializationGame"
				    android:textSize="20sp" />
			    
			</LinearLayout>    
			    
			<LinearLayout
			    android:layout_width="288dp"
			    android:layout_height="68dp"
			    android:layout_gravity="center"
			    android:orientation="vertical"
			    android:weightSum="1" >

				<Button
				    android:id="@+id/Button03"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:overScrollMode="ifContentScrolls"
				    android:text="ゲーム情報"
				    android:onClick="GameDataSite"
				    android:textSize="20sp" />
			    
			</LinearLayout>  
			    
      </LinearLayout>
</ScrollView>


